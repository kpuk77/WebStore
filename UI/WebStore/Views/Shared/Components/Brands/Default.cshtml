@model IEnumerable<WebStore.Domain.ViewModels.BrandViewModel>
@{
    var brandId = ViewBag.BrandId;
}

<div class="brands_products">
    <!--brands_products-->
    <h2>Бренды</h2>
    <div class="brands-name">
        <ul class="nav nav-pills nav-stacked">
            @foreach (var brand in Model)
            {
                <li @(brand.Id == brandId ? "class=active" : null)>
                    <a asp-controller="Catalog"
                       asp-action="Index"
                       asp-route-brandId="@brand.Id">
                        <span class="pull-right">(@*TODO: количество продуктов в данном бренде*@)</span>
                        @(brand.Id == brandId ? ">" : null) @brand.Name
                    </a>
                </li>
            }
        </ul>
    </div>
</div><!--/brands_products-->