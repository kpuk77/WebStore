@model WebStore.Domain.ViewModels.CatalogViewModel
@{
    ViewBag.Title = "Каталог";
}

<section>
    <div class="container">
        <vc:bread-crumbs/>
        <div class="row">
            <div class="col-sm-3">
                <partial name="Partial/_LeftSidebar" />
            </div>

            <div class="col-sm-9 padding-right">
                <partial name="Partial/_FeaturesItems" model="Model.Products"/>
                
                <paging page-view-model="Model.PageViewModel" 
                        page-action="Index"
                        page-url-sectionId="@Model.SectionId"
                        page-url-brandId="@Model.BrandId"
                        page-url-pageSize="@Context.Request.Query["PageSize"]"></paging>
            </div>
        </div>
    </div>
</section>